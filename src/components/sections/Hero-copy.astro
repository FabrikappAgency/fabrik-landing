    >
      {
        challenges.map((challenge, index) => {
          const [titleMoji, ...titleTextParts] = challenge.title.split(' ');
          const titleText = titleTextParts.join(' ');
          const icon = challenge.icon;
          return (
          <div class="relative container max-w-md mx-auto">
            <span class="text-[9rem] text-green-700 absolute left-0 -top-44 md:-left-4 md:-top-32 font-['Rubik_Doodle_Shadow']">
              {index + 1}
            </span>
            <div class="z-10 relative rounded-md text-gray-200 p-4 lg:max-w-lg h-full pb-20 xl:pb-0">
              <p class="text-center font-bold text-green-500 pb-4 text-2xl">
                <span class="text-4xl">{titleMoji}</span> {titleText}
              </p>
              <p class="text-center text-gray-400">{challenge.description}</p>
            </div>
          </div>
        )})
      }
