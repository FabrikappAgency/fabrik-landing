---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
const reasons = t("whyChooseUs.reasons", { returnObjects: true });
---

<section class="bg-gray-900">
  <div class="relative px-16 pt-20 pb-32 mx-auto max-w-7xl xl:px-16">
    <div class="relative z-20">
      <h3
        class="text-5xl font-bold leading-tight text-white md:text-6xl lg:text-7xl xl:text-7xl xl:leading-tight text-center"
      >
        <Trans i18nKey="whyChooseUs.title">
          Why choose <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
            >us</span
          > ?
        </Trans>
      </h3>
      <div class="flex flex-col mt-14 sm:flex-row sm:items-center">
        <div class="flex mt-5 space-x-1 sm:mt-1 sm:ml-3">
          <div
            class="w-10 h-2 bg-green-400 rounded-full opacity-100"
            data-primary="yellow-400"
          >
          </div>
          <div
            class="w-8 h-2 bg-green-400 rounded-full opacity-75"
            data-primary="yellow-400"
          >
          </div>
          <div
            class="w-6 h-2 bg-green-400 rounded-full opacity-50"
            data-primary="yellow-400"
          >
          </div>
          <div
            class="w-4 h-2 bg-green-400 rounded-full opacity-25"
            data-primary="yellow-400"
          >
          </div>
          <div
            class="w-2 h-2 bg-green-400 rounded-full opacity-10"
            data-primary="yellow-400"
          >
          </div>
          <div
            class="w-2 h-2 bg-green-400 rounded-full opacity-5"
            data-primary="yellow-400"
          >
          </div>
        </div>
      </div>
    </div>
    <div class="grid grid-cols-1 mt-24 gap-14 lg:grid-cols-3">
      {
        reasons.map((reason) => (
          <div class="flex text-white">
            <div class="relative space-y-2">
              <h4 class="flex items-center gap-4 text-xl font-bold leading-relaxed">
                <img src={reason.icon} class="w-4 h-4" /> {reason.title}
              </h4>
              <p class="text-lg text-gray-300">{reason.description}</p>
            </div>
          </div>
        ))
      }

