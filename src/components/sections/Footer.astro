---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import Icon from "@/components/Icon.tsx";
import YouTubeIcon from "@/assets/icons/youtube.svg";
import TwitterIcon from "@/assets/icons/twitter.svg";
import LinkedInIcon from "@/assets/icons/linkedin.svg";
const socials = t("footer.socialNetworks", { returnObjects: true });
const icons = {
  youtube: YouTubeIcon,
  twitter: TwitterIcon,
  linkedin: LinkedInIcon,
};
---

<section class="text-gray-700 body-font bg-gray-900">
  <div
    class="container flex flex-col items-center px-8 pt-8 mx-auto max-w-7xl sm:flex-row"
  >
    <a
      href="#home"
      class="text-xl font-black leading-none text-white select-none logo"
    >
      <Trans i18nKey="navigation.home">
        Fabrik<span
          class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
          >.dev</span
        >
      </Trans></a
    >
    <p
      class="mt-4 text-sm font-semibold sm:ml-4 sm:pl-4 sm:border-l sm:border-gray-200 sm:mt-0 text-gray-200"
    >
      {t("footer.description")}
    </p>
    <span
      class="inline-flex justify-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start"
    >
      {
        socials.map((social) => {
          const icon = social.name.toLowerCase();
          return (
            <a href={social.href} class="text-green-400 hover:text-gray-500">
              <span class="sr-only">{social.name}</span>
              <Icon className="w-6 h-6" name={icon} alt={social.name} />
            </a>
          );
        })
      }
    </span>
  </div>
  <div class="px-8 mx-auto max-w-7xl">
    <div
      class="flex flex-col items-start justify-between py-10 mt-10 border-t border-green-400 md:flex-row md:items-center"
    >
      <p class="mb-6 text-sm text-left text-gray-200 md:mb-0">
        {t("footer.copyright", { year: new Date().getFullYear() })}
      </p>
      <div
        class="flex items-start justify-start space-x-6 md:items-center md:justify-center"
      >
        <a href="#_" class="text-sm text-gray-200 transition hover:text-primary"
          >{t("footer.terms")}</a
        >
        <a href="#_" class="text-sm text-gray-200 transition hover:text-primary"
          >{t("footer.privacy")}</a
        >
      </div>
    </div>
  </div>
</section>
