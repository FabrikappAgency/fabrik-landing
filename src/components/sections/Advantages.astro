---
import FeatureImage from "@components/FeatureImage.astro";
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
const advantages = t("advantages.points", { returnObjects: true });
---

<section class="w-full px-10 bg-gray-900 lg:px-0">
  <div class="px-10 mx-auto max-w-7xl pt-24 pb-10">
    <div class="w-full mx-auto text-left md:text-center">
      <h1
        class="mb-6 text-5xl font-extrabold leading-none max-w-5xl mx-auto tracking-normal sm:text-6xl md:text-6xl lg:text-7xl md:tracking-tight text-white"
      >
        <Trans i18nKey="advantages.title">
          A
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
          >
            Personal CTO
          </span>
          &amp;
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
          >
            Tailored Development Service
          </span>
        </Trans>
        <img
          src="https://cdn.devdojo.com/images/october2021/shooting-star.png"
          class="w-12 h-12 ml-4 inline"
        />
      </h1>
    </div>
  </div>
  <div class="pb-20 mx-auto">
    <div class="">
      <div class="flex flex-col py-5">
        {
          advantages.map((advantage, index) => (
            <>
              {index % 2 === 0 ? (
                <FeatureImage isLeft={true} feature={advantage} />
              ) : (
                <FeatureImage isRight={true} feature={advantage} />
              )}
            </>
          ))
        }
      </div>
    </div>
  </div>
</section>
