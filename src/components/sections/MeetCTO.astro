---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
---

<section
  class="py-12 bg-gray-900 sm:py-16 md:py-20 lg:py-24 pb-28"
  data-primary="purple-600"
  data-tails-scripts="//unpkg.com/alpinejs"
>
  <div class="px-8 mx-auto lg:px-16 max-w-7xl">
    <div class="w-full mx-auto text-left md:text-center pb-16">
      <h1
        class="mb-6 text-5xl font-extrabold leading-none max-w-5xl mx-auto tracking-normal sm:text-6xl md:text-6xl lg:text-7xl md:tracking-tight text-white"
      >
        <Trans i18nKey="meetCto.title">
          Meet your
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
            >CTO</span
          >
          - <span class="w-full">Jeremy</span>
        </Trans>
      </h1>
      <p
        class="max-w-none mx-auto mt-3 text-xl font-normal text-gray-300 sm:mt-5 sm:text-xl md:mt-5 lg:text-2xl mb-12 px-12"
      >
        {t("meetCto.description")}
      </p>
    </div>
    <div class="max-w-5xl px-4 mx-auto">
      <div class="flex lg:flex-row flex-col-reverse items-center">
        <div
          class="w-full max-w-md mt-24 transform translate-y-10 lg:mt-0 px-4 mb-12 lg:mb-0 relative"
        >
          <div class="absolute inset-0 lg:pr-24 pb-20">
            <div
              class="w-full h-full bg-gradient-to-br from-yellow-200 to-yellow-300 rounded-2xl"
            >
            </div>
          </div>
          <img
            class="mx-auto object-cover rounded-lg lg:-ml-10 transform z-40 -translate-y-20"
            src="https://cdn.devdojo.com/tails/images/B4n7tEusqa3ZzL0VJ7EwTkNZsUzHxyIAz2tnePpj.png"
            alt=""
          />
        </div>
        <div class="w-full px-4">
          <div class="relative lg:max-w-none max-w-md mx-auto -mt-10">
            <svg
              class="w-16 h-16 mb-5 text-yellow-300 fill-current"
              viewBox="0 0 504 372"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g fill-rule="nonzero">
                <path
                  d="M143.92 141.2c0 34.16 70.559 39.199 70.559 123.2 0 61.602-44.238 107.52-105.84 107.52-65.52-.559-108.64-59.359-108.64-121.52C-.001 142.88 100.799.64 163.519.64c15.68 0 44.238 11.199 44.238 30.238.004 19.047-63.836 52.086-63.836 110.32l-.001.002ZM433.44 141.2c0 34.16 70.559 39.199 70.559 123.2 0 61.602-44.238 107.52-105.84 107.52-66.078 0-109.2-58.801-109.2-120.96 0-107.52 100.8-249.76 163.52-249.76 15.68 0 44.238 11.199 44.238 30.238 0 19.047-63.277 51.527-63.277 109.77v-.008Z"
                  class=""></path>
              </g>
            </svg>
            <h2
              class="mb-4 text-4xl xl:text-5xl font-bold text-yellow-300 leading-tight"
            >
              {t("meetCto.quote.title")}
            </h2>
            <p class="mb-9 text-base xl:text-lg text-white leading-loose">
              {t("meetCto.quote.text")}
            </p>
            <div class="flex justify-between items-center">
              <div>
                <p class="text-2xl font-bold text-yellow-300">
                  {t("meetCto.quote.name")}
                </p>
                <p class="text-lg text-gray-400">{t("meetCto.quote.job")}</p>
              </div>
              <a
                href="https://www.malt.fr/profile/jeremygv"
                target="_blank"
                class="text-lg text-gray-900 bg-yellow-300 px-4 py-2 font-bold rounded-md hover:bg-yellow-200"
                >{t("meetCto.quote.malt.label")}</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
