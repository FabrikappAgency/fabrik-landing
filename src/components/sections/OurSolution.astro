---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
---

<section class="h-auto py-12 md:py-20 bg-gray-900">
  <div class="md:text-center max-w-7xl mx-auto xl:px-0 px-5">
    <p
      class="font-medium mb-4 sm:text-lg uppercase tracking-wide text-green-400"
    >
      {t("solution.tagline")}
    </p>
    <h1
      class="mb-6 text-5xl font-extrabold leading-none max-w-5xl mx-auto tracking-normal sm:text-6xl md:text-6xl lg:text-7xl md:tracking-tight text-white"
    >
      <Trans i18nKey="solution.title">
        <p>
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
            >Expert CTO Services</span
          >
          -
        </p>
        <p>
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
            >Your</span
          >
          Vision. Our
          <span
            class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
            >Reality</span
          >
        </p>
      </Trans>
    </h1>
    <p
      class="max-w-none mx-auto mt-3 text-xl font-normal text-gray-300 sm:mt-5 sm:text-xl md:mt-5 lg:text-2xl md:max-w-4xl mb-12 px-12"
    >
      {t("solution.description")}
    </p>
  </div>
</section>
