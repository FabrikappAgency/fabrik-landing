---
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import { getLangFromUrl } from "@/i18n/utils";
const steps = t("howItWorks.steps", { returnObjects: true });

const lang = getLangFromUrl(Astro.url);
changeLanguage(lang);
---

<section class="">
  <div class="skew skew-top mr-for-radius"></div>
  <div class="skew skew-top ml-for-radius"></div>
  <div class="bg-gray-900 py-14 2xl:py-40 radius-for-skewed">
    <div class="max-w-7xl radius-for-skewed mx-auto">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap items-start">
          <div class="w-full mb-12 lg:mb-0 py-20 px-8 lg:w-1/2">
            <div class="max-w-md">
              <span class="text-green-400 font-bold">
                {t("howItWorks.tagline")}
              </span>
              <h1
                class="mb-6 text-5xl font-extrabold leading-none max-w-5xl mx-auto tracking-normal sm:text-6xl md:text-6xl lg:text-7xl md:tracking-tight text-white"
              >
                <Trans i18nKey="howItWorks.title">
                  From
                  <span
                    class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
                  >
                    Zero
                  </span>
                  to
                  <span
                    class="w-full text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-blue-400 to-purple-400 lg:inline"
                  >
                    Hero
                  </span>
                </Trans>
              </h1>
              <div class="max-w-xs">
                <p
                  class="max-w-none mx-auto mt-3 text-xl font-normal text-gray-300 sm:mt-5 sm:text-xl md:mt-5 lg:text-2xl mb-12"
                >
                  {t("howItWorks.description")}
                </p>
              </div>
            </div>
          </div>
          <div class="w-full lg:w-1/2">
            <div class="mb-12 flex flex-wrap items-start lg:-ml-4">
              <span
                class="mb-4 lg:mb-0 lg:mr-6 inline-flex items-center justify-center w-16 h-16 bg-green-800 rounded text-green-400 text-2xl font-bold"
              >
                {steps[0].step_number}
              </span>
              <div class="w-full lg:w-3/4">
                <h3 class="mb-4 text-2xl font-bold font-heading text-white">
                  {steps[0].title}
                </h3>
                <p class="text-gray-500 leading-loose">
                  {steps[0].description}
                </p>
              </div>
            </div>
            <div class="mb-12 flex flex-wrap items-start">
              <span
                class="mb-4 lg:mb-0 lg:mr-6 inline-flex items-center justify-center w-16 h-16 bg-blue-800 rounded text-blue-400 text-2xl font-bold"
              >
                {steps[1].step_number}
              </span>
              <div class="w-full lg:w-3/4">
                <h3 class="mb-4 text-2xl font-bold font-heading text-white">
                  {steps[1].title}
                </h3>
                <p class="text-gray-500 leading-loose">
                  {steps[1].description}
                </p>
              </div>
            </div>
            <div class="mb-12 flex flex-wrap items-start lg:ml-6">
              <span
                class="mb-4 lg:mb-0 lg:mr-6 inline-flex items-center justify-center w-16 h-16 bg-pink-800 rounded text-pink-400 text-2xl font-bold"
              >
                {steps[2].step_number}
              </span>
              <div class="w-full lg:w-3/4">
                <h3 class="mb-4 text-2xl font-bold font-heading text-white">
                  {steps[2].title}
                </h3>
                <p class="text-gray-500 leading-loose">
                  {steps[2].description}
                </p>
              </div>
            </div>
            <div class="flex flex-wrap items-start lg:ml-14">
              <span
                class="mb-4 lg:mb-0 lg:mr-6 inline-flex items-center justify-center w-16 h-16 bg-purple-800 rounded text-purple-400 text-2xl font-bold"
              >
                {steps[3].step_number}
              </span>
              <div class="w-full lg:w-3/4">
                <h3 class="mb-4 text-2xl font-bold font-heading text-white">
                  {steps[3].title}
                </h3>
                <p class="text-gray-500 leading-loose">
                  {steps[3].description}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="skew skew-bottom mr-for-radius"></div>
    <div class="skew skew-bottom ml-for-radius"></div>
  </div>

  <div class="skew skew-bottom mr-for-radius"></div>
  <div class="skew skew-bottom ml-for-radius"></div>
</section>
